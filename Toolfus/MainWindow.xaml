<Window x:Class="Toolfus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toolfus"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Dofus account" Margin="10,20,10,20"
                   FontFamily="Verdana" FontSize="18" FontWeight="Bold"
                   Foreground="#28C900" Grid.Row="0"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Grid.Row="1">
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <CheckBox x:Name="cb1" Grid.Row="1" Grid.Column="0" Margin="5,0,0,0" 
                          Content="Awned lvl 5050"  IsThreeState="True"/>
                <TextBlock x:Name="text1" Grid.Row="1" Grid.Column="0" Margin="5,0,0,0" />
                <CheckBox x:Name="cb2" Grid.Row="2" Grid.Column="0" Margin="5,0,0,0"
                          Content="Awned lvl 5050" IsThreeState="True"/>
                <TextBlock x:Name="text2" Grid.Row="2" Grid.Column="0" Margin="5,0,0,0" />
                <CheckBox x:Name="cb3" Grid.Row="3" Grid.Column="0" Margin="5,0,0,0"
                          Content="Awned lvl 5050" IsThreeState="True"/>
                <TextBlock x:Name="text3" Grid.Row="3" Grid.Column="0" Margin="5,0,0,0" />
                <CheckBox x:Name="cb4" Grid.Row="4" Grid.Column="0" Margin="5,0,0,0"
                          Content="Awned lvl 5050" IsThreeState="True"/>
                <TextBlock x:Name="text4" Grid.Row="4" Grid.Column="0" Margin="5,0,0,0" />
                <CheckBox x:Name="cb5" Grid.Row="5" Grid.Column="0" Margin="5,0,0,0"
                          Content="Awned lvl 5050" IsThreeState="True"/>
                <TextBlock x:Name="text5" Grid.Row="5" Grid.Column="0" Margin="5,0,0,0" />
                <CheckBox x:Name="cb6" Grid.Row="6" Grid.Column="0" Margin="5,0,0,0"
                          Content="Awned lvl 5050" IsThreeState="True"/>
                <TextBlock x:Name="text6" Grid.Row="6" Grid.Column="0" Margin="5,0,0,0" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
